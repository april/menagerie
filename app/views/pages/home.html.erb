<h1><%= inline_svg "icons/wolf" %> The Menagerie</h1>
<p>A <b>crowdsourced tag catalog</b> for Magic: The Gathering illustrations</p>
<%= form_tag search_path, method: "get", "data-component":"autocomplete-form" do %>
  <script>
    window.tags_collection = <%= raw Tag.distinct.pluck(:name).to_json %>;
  </script>
  <div class="tag-form-row">
    <label class="vh">Tag</label>
    <span class="autocomplete-wrapper">
      <%= text_field_tag :tag, nil, placeholder: "Tag", autocorrect:"off", autocomplete:"off", "data-src":"tags_collection" %>
    </span>
  </div>
  <%= button_tag "Find a Tag", title: "Find a Tag", class:"button-primary" %>
<% end %>