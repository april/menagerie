<div class="illustration">
  <h1><%= link_to illustration.name, link_uri %></h1>
  <%= link_to link_uri, title: illustration.name, class:"frame frame2015" do %>
    <%= image_tag illustration.image_large_uri, alt: illustration.name %>
  <% end %>
  <div class="illustration--credit">
    <span>By <%= illustration.artist %></span>
    <span>™ &amp; © Wizards of the Coast</span>
  </div>
</div>