<% size = local_assigns.fetch(:size, :normal) %>
<div class="illustration">
  <h1><%= link_to illustration.name, link_uri, rel:"nofollow" %></h1>
  <%= link_to link_uri, title: illustration.name, class:"frame frame-#{illustration.frame} layout-#{illustration.layout} face-#{illustration.face} set-#{illustration.set_code}", rel:"nofollow" do %>
    <%= image_tag illustration.send("image_#{size}_uri".to_sym), alt: illustration.name %>
  <% end %>
  <div class="illustration--credit">
    <span>By <%= illustration.artist %></span>
    <span>™ &amp; © Wizards of the Coast</span>
  </div>
</div>